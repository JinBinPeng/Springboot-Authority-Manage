<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pjb.apacheshiro.mapper.UserMapper">
    <resultMap id="userMap" type="com.pjb.apacheshiro.model.User" autoMapping="true">
        <id property="uid" column="uid" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <collection property="roles" ofType="com.pjb.apacheshiro.model.Role" autoMapping="true">
            <collection property="permissions" ofType="com.pjb.apacheshiro.model.Permission" autoMapping="true">
            </collection>
        </collection>
    </resultMap>

    <select id="findByUsername" parameterType="string" resultMap="userMap">
        SELECT u.*, r.*, p.*
        FROM user u
                 INNER JOIN user_role ur on ur.uid = u.uid
                 INNER JOIN role r on r.rid = ur.rid
                 INNER JOIN permission_role pr on pr.rid = r.rid
                 INNER JOIN permission p on pr.pid = p.pid
        WHERE u.username = #{username}
    </select>
</mapper>